
<div class="col-md-10">
    <div class="well well-lg character-details">
        <fieldset>
            <legend class="text-center">Character info</legend>
            <div class="details-list col-md-6">
                <dl class="dl-horizontal">

                    <dt>Name:</dt>
                    <dd>{{detail.Name}}</dd>

                    <dt>Description:</dt>
                    <dd>{{detail.Description}}</dd>

                    <dt>Ability:</dt>
                    <dd>Not implemented</dd>

                    <dt>Equipped Armour:</dt>
                    <dd>{{detail.EquippedArmourName}}</dd>

                    <dt>Equipped Weapon:</dt>
                    <dd>{{detail.EquippedWeaponName}}</dd>
                </dl>
            </div>
            @Html.Partial("_CharacterAttributesInfo")

            <div class="weapon-img col-md-12">

                <img ng-src="/{{detail.ImageLink}}" />
            </div>
        </fieldset>
    </div>
    <div ng-hide="weaponBtnHide" class="change-buttons col-md-12">
        <button ng-click="editShow=true; detailHide=true" type="button" name="edit" class="btn btn-success btn-block" ng-disabled="detail!=null">Edit</button>
        <button ng-click="deleteWeapon()" type="button" name="edit" class="btn btn-danger btn-block" ng-disabled="detail!=null">Delete</button>
    </div>
    <div class="btn-group">
        <span class="button"><button ng-click="editShow=false;detailHide=true;addShow=true;getEquipment();" type="button" name="add" class="btn btn-info">Add Character</button></span>
        @Html.ActionLink("Manage images", "DisplayCharacterImages", "AdminStaticCharacters", null, new { @class = "button btn btn-default pull-right" })
    </div>
</div>

