@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        @if ((bool)ViewBag.HasCharacter != true)
        {
            <h2>Create a character</h2>
            <p>
                Choose a powerful character
            </p>
            <div class="btn-group btn-group-justified">
                @Html.ActionLink("Create", "Create", "Characters", null, new { @class = "btn btn-primary" })
            </div>
        }
        else if((bool)ViewBag.HasGame != true)
        {
            <p>Starta  nytt spel här</p>
            <div class="btn-group btn-group-justified">
                @Html.ActionLink("New Game", "NewGame", "Game", null, new { @class = "btn btn-primary" })
            </div>
        }
        else //Continue game
        {
            <p>Fortsätt spela här...</p>

        }
    </div>
</div>